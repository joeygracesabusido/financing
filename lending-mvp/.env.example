# ─────────────────────────────────────────────────────────────────────────────
# Lending MVP — Environment Variables
# Copy this file to .env and fill in your values.
# ─────────────────────────────────────────────────────────────────────────────

# ── MongoDB ──────────────────────────────────────────────────────────────────
MONGO_URL=mongodb://lending_mongo:27017
MONGO_DB_NAME=lending_mvp

# ── PostgreSQL ───────────────────────────────────────────────────────────────
POSTGRES_DB=lending_db
POSTGRES_USER=lending_user
POSTGRES_PASSWORD=lending_secret

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=lending_redis_pass

# ── Backend / Auth ───────────────────────────────────────────────────────────
SECRET_KEY=CHANGE_ME_to_a_long_random_string_at_least_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── Frontend (Vite) ──────────────────────────────────────────────────────────
VITE_GRAPHQL_URL=http://localhost:8001/graphql
VITE_API_URL=http://localhost:8001
