# ============================================================================
# Lending & Savings Management System ‚Äî Environment Configuration
# ============================================================================
# Copy this file to .env and customize for your environment

# ============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (for Phase 1+ features: audit, KYC, beneficiaries, etc.)
DATABASE_URL=postgresql://lending_user:lending_password@localhost:5432/lending_db

# MongoDB (for core banking: customers, loans, savings, transactions)
MONGODB_URI=mongodb://localhost:27017/lending

# ============================================================================
# üîë SECURITY & AUTHENTICATION
# ============================================================================

# JWT Secret Key (change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# üåê SERVER CONFIGURATION
# ============================================================================

# Application environment
ENVIRONMENT=development

# Server host and port
HOST=0.0.0.0
PORT=8000

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================================================
# üå± DEMO DATA SEEDING (DEVELOPMENT ONLY)
# ============================================================================

# Enable demo data seeding on startup
# Set to 'true' to populate sample users, customers, loans, savings, etc.
# ‚ö†Ô∏è WARNING: Only use in development! Set to 'false' in production.
SEED_DEMO_DATA=true

# ============================================================================
# üìß EMAIL CONFIGURATION (Optional)
# ============================================================================

# Email provider (sendgrid, smtp, aws_ses)
EMAIL_PROVIDER=sendgrid

# SendGrid API Key
SENDGRID_API_KEY=

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# üì± SMS CONFIGURATION (Optional)
# ============================================================================

# SMS provider (twilio, nexmo)
SMS_PROVIDER=twilio

# Twilio credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# üíæ FILE STORAGE CONFIGURATION (Optional)
# ============================================================================

# Storage backend (local, s3, minio)
STORAGE_BACKEND=local

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
S3_BUCKET=lending-documents

# MinIO (if self-hosting)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=lending-documents

# ============================================================================
# üî¥ REDIS CONFIGURATION (Optional)
# ============================================================================

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# Session TTL (seconds)
SESSION_TTL=3600

# ============================================================================
# üîç MONITORING & LOGGING
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN (for error tracking in production)
SENTRY_DSN=

# ============================================================================
# üìä COMPLIANCE & REGULATORY
# ============================================================================

# Business country (for regulatory compliance)
BUSINESS_COUNTRY=Philippines

# Currency (ISO 4217)
CURRENCY=PHP

# Timezone
TIMEZONE=Asia/Manila

# ============================================================================
# üß™ TESTING CONFIGURATION
# ============================================================================

# Testing database (if different from main)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/lending_test

# Run tests with demo data
RUN_TESTS_WITH_DEMO_DATA=false

# ============================================================================
# üê≥ DOCKER CONFIGURATION
# ============================================================================

# Docker environment (docker, local, production)
DOCKER_ENV=docker

# ============================================================================
# QUICK START
# ============================================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Update values for your environment
#
# 3. For demo data seeding:
#    SEED_DEMO_DATA=true
#    Then start the backend
#
